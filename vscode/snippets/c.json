{
  "Header Guard": {
    "prefix": "hg",
    "body": [
      "#ifndef ${1:FILE}",
      "#define ${1:FILE}",
      "",
      "$2",
      "",
      "#endif // ${1:FILE}"
    ]
  },
  "#include <...>": {
    "prefix": "inc",
    "body": "#include <${1:stdio.h}>"
  },
  "#include \"...\"": {
    "prefix": "in",
    "body": "#include \"${1:header}\""
  },
  "#ifdef ... #endif": {
    "prefix": "ifdef",
    "body": [
      "#ifdef ${1:condition}",
      "",
      "$2",
      "",
      "#endif // ${1:condition}"
    ]
  },
  "Doc Comment": {
    "prefix": "/**",
    "body": [
      "/** ${1:brief}",
      " *",
      " * ${2:description}",
      " */"
    ]
  },
  "Seperator": {
    "prefix": "//-",
    "body": "// --------------------------------------------------------"
  },
  "If Statement": {
    "prefix": "if",
    "body": [
      "if (${1:condition}) {",
      "\t$2",
      "}"
    ]
  },
  "If-Else Statement": {
    "prefix": "ife",
    "body": [
      "if (${1:condition}) {",
      "\t$2",
      "} else {",
      "\t$3",
      "}"
    ]
  },
  "Switch Statement": {
    "prefix": "sw",
    "body": [
      "switch (${1:var}) {",
      "case ${2:value}:",
      "\t$3",
      "\tbreak;",
      "default:",
      "\t$4",
      "}"
    ]
  },
  "For Loop": {
    "prefix": "for",
    "body": [
      "for (${1:int} ${2:i} = ${3:0}; ${2:i} < ${4:length}; ++${2:i}) {",
      "\t$5",
      "}"
    ]
  },
  "For Loop (reverse)": {
    "prefix": "forr",
    "body": [
      "for (${1:int} ${2:i} = ${3:length} - 1; ${2:i} >= ${4:0}; --${2:i}) {",
      "\t$5",
      "}"
    ]
  },
  "Print": {
    "prefix": "p",
    "body": "printf(${1:var}: ${2:%d}\\n, $1);"
  }
}
