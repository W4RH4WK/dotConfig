{
	"////": {
		"prefix": "//-",
		"body": "////////////////////////////////////////////////////////////"
	},
	"Include": {
		"prefix": "in",
		"body": "#include <${1:iostream}>"
	},
	"Include Relative": {
		"prefix": "inc",
		"body": "#include \"${1:${TM_FILENAME_BASE}.hpp}\""
	},
	"Enum": {
		"prefix": "enum",
		"body": [
			"enum ${1:name} {",
			"\t$0",
			"};"
		]
	},
	"if": {
		"prefix": "if",
		"body": [
			"if (${1:condition}) {",
			"\t$0",
			"}"
		]
	},
	"else": {
		"prefix": "else",
		"body": [
			"else {",
			"\t$0",
			"}"
		]
	},
	"for": {
		"prefix": "for",
		"body": [
			"for (auto ${1:i} = 0; $1 < ${2:size}; ++$1) {",
			"\t$0",
			"}"
		]
	},
	"forr": {
		"prefix": "forr",
		"body": [
			"for (auto ${1:i} = ${2:size} - 1; $1 >= 0; --$1) {",
			"\t$0",
			"}"
		]
	},
	"switch": {
		"prefix": "sw",
		"body": [
			"switch (${1:name}) {",
			"case ${2:name}:",
			"\t$0",
			"\tbreak;",
			"default:",
			"}"
		]
	},
	"X-Macro define": {
		"prefix": "xdef",
		"body": [
			"#ifndef ${1:name}",
			"#define $1(${2:_args})",
			"#endif",
			"",
			"$0"
		]
	}
}
